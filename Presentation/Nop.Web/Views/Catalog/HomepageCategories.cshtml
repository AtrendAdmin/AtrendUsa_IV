@model IList<CategoryModel>

@using Nop.Web.Models.Catalog;
@using Nop.Core.Infrastructure

@if (EngineContext.Current.Resolve<Nop.Core.IStoreContext>().CurrentStore.Id == 1) //Added by IV Santosh
{
    <style type="text/css">
        .sectionswlt {
            float: left;
            width: 100%;
        }

        .maindivesection {
            width: 1285px;
            margin: 0 auto;
        }

        .home-page-category-grid-left {
            width: 26%;
            /*margin: 0 30px 0 0;*/
            margin: 1px 30px 0 10px;
            float: left;
        }

        .picture .imgpages {
            width: 100%;
        }

        .item-grid.wltpage {
            width: 910px;
            margin: 0px;
            padding: 0px;
            float: left;
        }

        .mgtposat {
            margin-top: 18px;
        }

        .category-item-left mgtposat {
            margin-top: 1px;
        }
            
        @@media (min-width: 768px) and (max-width: 980px) {
            .maindivesection {width: 720px; margin: 0 auto; }
            .home-page-category-grid-left { width: 30%; margin:1px 15px 0 0px; }
            .picture .imgpages { width: 100%; }
            .item-grid.wltpage { width: 488px; }
        }
    
 @@media (max-width: 767px) { 
 .sectionswlt .maindivesection { width:90%; margin:0 auto; }
 .home-page-category-grid-left { width:100%; margin:0px 0 15px 0; float: none;}
 .item-grid.wltpage { width:100%; margin: 0px; padding: 0px; float: none;}
.home-page-category-grid, .sub-category-grid, .manufacturer-grid, .vendor-grid {margin: 0 0 40px; padding: 15px 0;}
}

 @@media (min-width: 981px) and (max-width: 1200px) {
 .maindivesection {width: 990px; margin: 0 auto; }
            .home-page-category-grid-left { width: 30%; margin:1px 15px 0 0px; }
            .picture .imgpages { width: 100%; }
            .item-grid.wltpage { width: 674px; }


 }

    </style>

    <div class="category-grid home-page-category-grid sectionswlt">
        <div class="maindivesection">
            <div class="category-grid home-page-category-grid-left">
                <div class="item-grid-left">
                    <div class="item-box-left">
                        <div class="category-item-left">
                            <div class="picture">
                                <a target="_blank" href='@Url.Content("https://www.atrendusa.com/Content/Images/uploaded/2018Catalog/Atrend-OEM-Poster_2018%20FINAL.pdf?__hstc=233546881.ea40ad81baefe0da9327bc967fb78458.1528727792392.1530113008046.1530117965485.25&__hssc=233546881.2.1530117965485&__hsfp=1379974738")'
                                   title="item.PictureModel.Title">
                                    <img class="imgpages" alt="OEM Poster" src='@Url.Content("~/Content/HomePage/Images/Atrend-OEM-Poster.jpg")'
                                         title="OEM Poster" style="height:213px;" />
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="item-box-left">
                        <div class="category-item-left mgtposat">

                            <div class="picture">
                                <a target="_blank" href="@Url.Content("https://www.atrendusa.com/Content/Images/uploaded/2018Catalog/Atrend-VSP-Poster_2018-OFFICIAL%20Jan%201%202018.pdf?__hstc=233546881.ea40ad81baefe0da9327bc967fb78458.1528727792392.1530113008046.1530117965485.25&__hssc=233546881.1.1530117965485&__hsfp=1379974738")" title="item.PictureModel.Title">
                                    <img class="imgpages" alt="VPS Poster" src='@Url.Content("~/Content/HomePage/Images/Atrend-VSP-Poster.jpg")'
                                         title="VPS Poster" style="height:213px;" />
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            @if (Model.Count > 0)
            {
                <div class="category-grid">
                    <div class="item-grid wltpage" id="HomeCatItmgrd">
                        @foreach (var item in Model)
                        {
                            <div class="item-box">
                                <div class="category-item">
                                    <h2 class="title">
                                        <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                            @item.Name
                                        </a>
                                    </h2>
                                    <div class="picture">
                                        <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                            <img alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

        </div>
    </div>
}
else
{
    if (Model.Count > 0)
    {
        <div class="category-grid home-page-category-grid">
            <div class="item-grid">
                @foreach (var item in Model)
                    {
                    <div class="item-box">
                        <div class="category-item">
                            <h2 class="title">
                                <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                    @item.Name
                                </a>
                            </h2>
                            <div class="picture">
                                <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                    <img alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
}







